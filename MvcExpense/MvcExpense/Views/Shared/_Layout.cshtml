<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Html.Title( (string) ViewBag.Title )</title>
    <link rel="shortcut icon" id="favicon" type="image/x-icon" href="@Url.Content( "~/Content/icons/currency_dollar_yellow.ico" )" />

    @Html.Css( "~/Content/Site.css" )
    @Html.Css( "~/Content/themes/base/jquery.ui.all.css" )
    @Html.Css( "~/Content/Menu/style.css" )
    @Html.Css( "~/Content/Site2.css" )
    @Html.Css( "~/Content/Flash.css" )
    
    @Html.Script( "~/Scripts/jquery-1.5.1.min.js" )
    @Html.Script( "~/Scripts/modernizr-1.7.min.js" )
    @Html.Script( "~/Scripts/jquery-ui-1.8.11.min.js" )
    @Html.Script( "~/Scripts/EditorHookup.js" )

    @Html.Assets().Styles.Render()
    @Html.Assets().Scripts.Render()
</head>
<body>
    <div class="page">
        <header>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="title">
                <h1>MVC</h1>
            </div>
            <nav>
                @Html.MvcSiteMap().Menu( false, true, true )
            </nav>
            <div id="breadcrumb">
                @Html.MvcSiteMap().SiteMapPath()
            </div>
        </header>
        <section id="main">
            @Html.Flash()
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
