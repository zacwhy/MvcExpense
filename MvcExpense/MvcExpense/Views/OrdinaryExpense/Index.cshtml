@model IEnumerable<MvcExpense.Models.OrdinaryExpense>

@{
    var sb = new System.Text.StringBuilder( "Ordinary Expense" );
    if ( Model.Count() > 0 )
    {
        sb.Append( " - " );
        sb.Append( Model.First().Date.ToString( "MMM yyyy" ) );
    }
    ViewBag.Title = sb.ToString();
}

<h2>@ViewBag.Title</h2>

<h3>To do</h3>
<ol>
    <li>Edit page reuse create page</li>
</ol>

<p>
    @Html.ActionLink( "Create New", "Create", null, new { accesskey = "C" } )
</p>
<table>
    <tr>
        <th>
            Date
        </th>
        <th>
            @*Sequence*@
        </th>
        <th>
            Price
        </th>
        <th>
            Consumer
        </th>
        <th>
            Category
        </th>
        <th>
            Description
        </th>
        <th>
            Payment Method
        </th>
        @*<th>
            Remarks
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @string.Format("{0:dd MMM yyyy ddd}",item.Date)
            @*@Html.DisplayFor(modelItem => item.Date)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sequence)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Consumer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentMethod.Name)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
